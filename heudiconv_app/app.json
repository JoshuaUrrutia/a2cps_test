{
  "name": "{{ agave.username }}-{{ app.name }}",
  "version": "{{ app.version }}",
  "executionType": "HPC",
  "executionSystem": "{{ app.hpc_system}}",
  "parallelism": "SERIAL",
  "deploymentPath": "apps/{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "{{ app.storage_system}}",
  "defaultProcessorsPerNode": 1,
  "defaultNodeCount": 1,
  "defaultQueue": "normal",
  "label": "HEUDICONV_TEST",
  "modules": ["load tacc-singularity"],
  "shortDescription": "{{ app.description }}",
  "templatePath": "runner-template.sh",
  "testPath": "tester.sh",
  "inputs": [
  {
  "id": "BIDS_DIRECTORY",
  "value": {
    "default": "agave://a2cps.storage.public/a2cps_openneuro_testdata/",
    "visible": true,
    "required": true
  },
  "semantics": {
    "ontology": [
      "https://bids.neuroimaging.io/specification.html"
    ]
  },
  "details": {
    "label": "The root folder of a BIDS valid dataset (sub-XXXXX folders should be found at the top level in this folder)."
  }
  }],
  "parameters": [{
    "id": "CONTAINER_IMAGE",
    "value": {
      "default": "{{ docker.organization }}/{{ docker.repo }}:{{ docker.tag }}",
      "description": "Container Image. Do not edit.",
      "type": "string",
      "visible": false,
      "required": true
    }
  },
  {
    "id": "PARTICIPANT_LABEL",
    "value": {
      "default": "01",
      "description": "A space delimited list of participant identifiers or a single identifier (the sub- prefix can be removed)",
      "type": "string",
      "visible": true,
      "required": false
    },
    "details": {
      "label": "A space delimited list of participant identifiers or a single identifier (the sub- prefix can be removed)",
      "showArgument": false,
      "argument": "participant --participant_label "
    }
  },
  {
    "id": "OUTPUT_DIR",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "DICOM_DIR_TEMPLATE",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "FILES",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "LIST_OF_SUBJECTS",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "LOCATOR",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "CONV_OUTDIR",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "ANON_CMD",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "HEURISTIC",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "SESSION_FOR_LONGITUDINAL",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "GROUPING",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "RANDOM_SEED",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  },
  {
    "id": "DCMCONFIG",
    "value": {
      "default": "outputs",
      "description": "the output path for the outcomes of preprocessing and visual reports",
      "type": "string",
      "visible": true,
      "required": true
    }
  }]
}
heudiconv \
--dicom_dir_template ${DICOM_DIR_TEMPLATE} | --files ${FILES} \
--subjects ${LIST_OF_SUBJECTS} \
--converter {dcm2niix,none}] \
--outdir ${OUTDIR} \
--locator ${LOCATOR} --conv-outdir ${CONV_OUTDIR} \
--anon-cmd ${ANON_CMD} \
--heuristic ${HEURISTIC} --with-prov \
--ses ${SESSION_FOR_LONGITUDINAL} --bids --overwrite \
--datalad] --dbg \
--grouping {studyUID,accession_number} --minmeta \
--random-seed ${RANDOM_SEED} --dcmconfig ${DCMCONFIG} \
