{
  "name": "{{ agave.username }}-{{ app.name }}",
  "version": "{{ app.version }}",
  "executionType": "HPC",
  "executionSystem": "{{ app.hpc_system}}",
  "parallelism": "SERIAL",
  "deploymentPath": "apps/{{ app.name }}-{{ app.version }}",
  "deploymentSystem": "{{ app.storage_system}}",
  "defaultProcessorsPerNode": 1,
  "defaultNodeCount": 1,
  "defaultQueue": "normal",
  "label": "fMRIPRep",
  "modules": ["load tacc-singularity"],
  "shortDescription": "{{ app.description }}",
  "templatePath": "runner-template.sh",
  "testPath": "tester.sh",
  "inputs": [{
    "id": "BIDS_DIRECTORY",
    "value": {
      "default": "agave://a2cps.storage.public/a2cps_openneuro_testdata/",
      "visible": true,
      "required": true
    },
    "semantics": {
      "ontology": [
        "https://bids.neuroimaging.io/specification.html"
      ]
    },
    "details": {
      "label": "The root folder of a BIDS valid dataset (sub-XXXXX folders should be found at the top level in this folder)."
    }
  }],
  "parameters": [{
      "id": "CONTAINER_IMAGE",
      "value": {
        "default": "{{ docker.organization }}/{{ docker.repo }}:{{ docker.tag }}",
        "description": "Container Image. Do not edit.",
        "type": "string",
        "visible": false,
        "required": true
      }
    },
    {
      "id": "PARTICIPANT_LABEL",
      "value": {
        "default": "sub-01",
        "description": "A space delimited list of participant identifiers or a single identifier (the sub- prefix can be removed)",
        "type": "string",
        "visible": true,
        "required": false
      },
      "details": {
        "label": "A space delimited list of participant identifiers or a single identifier (the sub- prefix can be removed)",
        "showArgument": true,
        "argument": "participant --participant_label "
      }
    },
    {
      "id": "OUTPUT_DIR",
      "value": {
        "default": "outputs",
        "description": "the output path for the outcomes of preprocessing and visual reports",
        "type": "string",
        "visible": true,
        "required": true
      }
    },


    {
      "id": "FIELDMAPS",
      "value": {
        "default": "fieldmaps",
        "description": "include distortion correction in the pipeline",
        "type": "enum",
        "enumValues": ["fieldmaps", "--ignore fieldmaps"],
        "visible": true,
        "required": false
      }
    },


    {
      "id": "SLICE_TIMING",
      "value": {
        "default": "slicetiming",
        "description": "include slice timing correction for the functionals in the pipeline",
        "type": "enum",
        "enumValues": ["slicetiming", "--ignore slicetiming"],
        "visible": true,
        "required": false
      }
    },

    {
      "id": "HEAD_MOTION",
      "value": {
        "default": "9",
        "description": "traditional head motion degrees of freedom",
        "type": "enum",
        "enumValues": ["6", "9", "12"],
        "visible": true,
        "required": true
      }
    },

    {
      "id": "DUMMY_SCANS",
      "details": {
        "argument": "--dummy-scans ",
        "showArgument": true
      },
      "value": {
        "default": "",
        "description": "Number of non steady state volumes",
        "type": "number",
        "visible": true,
        "required": false
      }

    },

    {
      "id": "ICA_AROMA_USE",
      "value": {
        "default": "--use-aroma",
        "description": "add ICA_AROMA to your preprocessing stream",
        "type": "enum",
        "enumValues": ["--use-aroma", ""],
        "visible": true,
        "required": false
      }
    },

    {
      "id": "ICA_AROMA_DIMENSIONALITY",
      "details": {
        "argument": "--aroma-melodic-dimensionality ",
        "showArgument": true
      },
      "value": {
        "default": "",
        "description": "Exact or maximum number of MELODIC components to estimate (positive = exact, negative = maximum)",
        "type": "number",
        "visible": true,
        "required": false
      }

    },


    {
      "id": "FD_SPIKE",
      "details": {
        "argument": "--fd-spike-threshold ",
        "showArgument": true
      },
      "value": {
        "default": "",
        "description": "Threshold for flagging a frame as an outlier on the basis of framewise displacement",
        "type": "number",
        "visible": true,
        "required": false
      }

    },
    {
      "id": "CIFTI_OUTPUT",
      "details": {
        "argument": "--cifti-output ",
        "showArgument": true
      },
      "value": {
        "default": "91k",
        "description": "add ICA_AROMA to your preprocessing stream",
        "type": "enum",
        "enumValues": ["91k", "170k"],
        "visible": true,
        "required": false
      }
    }


  ]
}
